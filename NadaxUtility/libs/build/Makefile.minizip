INCLUDEDIRS =

OBJS = unzip.o zip.o ioapi.o

libminizip.dylib : ${OBJS}
	${CC} ${LDFLAGS} -o $@ $?

libminizip.a : ${OBJS}
	${AR} rv $@ $?
	${RANLIB} $@

ioapi.o : ioapi.c
	${CC} -c $? ${CFLAGS} ${INCLUDEDIRS}

zip.o : zip.c
	${CC} -c $? ${CFLAGS} ${INCLUDEDIRS}

unzip.o : unzip.c
	${CC} -c $? ${CFLAGS} ${INCLUDEDIRS}

install : libminizip.a libminizip.dylib
	if ( test ! -d ${PREFIX}/lib ) ; then mkdir -p ${PREFIX}/lib ; fi
	if ( test ! -d ${PREFIX}/include/zip ) ; then mkdir -p ${PREFIX}/include/zip ; fi
	mv -f libminizip.a ${PREFIX}/lib
	mv -f libminizip.dylib ${PREFIX}/lib
	cp -f *.h ${PREFIX}/include/zip
	rm *.o

clean :
	rm *.o
	rm -f libminizip.so
